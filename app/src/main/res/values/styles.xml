    <!--Paleta de colores-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Transiciones -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition"> @transition/transition_explode </item>
        <item name="android:windowExitTransition"> @transition/transition_explode </item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>

        <item name="android:windowReenterTransition"> @transition/transition_slide </item>
        <item name="android:windowReturnTransition"> @transition/transition_fade </item>
        <!--<item name="android:windowAllowReturnTransitionOverlap">false</item>-->


        <!-- Para elementos comparticos -->
        <item name="android:windowSharedElementEnterTransition">@transition/transition_curva </item>
        <item name="android:windowSharedElementExitTransition"> @transition/transition_curva </item>

    </style>

