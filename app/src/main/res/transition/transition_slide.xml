<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android">
    <explode
        android:duration="3000">
        <targets>
            <target
                android:excludeId="@android:id/statusBarBackground" />
            <target
                android:excludeId="@android:id/navigationBarBackground" />
            <target
                android:excludeId="@id/app_bar" />
            <target
                android:excludeId="@id/detail_toolbar" />
        </targets>
    </explode>
    <fade
        android:duration="3000">
        <targets>
            <target
                android:targetId="@id/app_bar" />
            <target
                android:targetId="@id/detail_toolbar" />
        </targets>
    </fade>
</transitionSet>